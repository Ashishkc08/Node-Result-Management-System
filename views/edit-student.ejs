<!-- edit-student.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1>Edit Student</h1>
    <div class="mb-3">
      <a class="btn btn-secondary" href="/logout">Logout</a>
      <a class="btn btn-primary" href="/api/teacher/students">Back</a>
    </div>
    <form action="/update/student/<%= student.id %>" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value=<%= student.name %> required>
      </div>
      <div class="form-group">
        <label for="dateOfBirth">Date of Birth</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" value=<%= student.dateOfBirth %> required>
      </div>
      <div class="form-group">
        <label for="rollNumber">Roll Number</label>
        <input type="text" id="rollNumber" name="rollNumber" value=<%= student.rollNumber %> required disabled>
      </div>
      <div class="form-group">
        <label for="score">Score</label>
        <input type="number" id="score" name="score" value=<%= student.score %> required>
      </div>
      <button type="submit" class="btn btn-primary">Update Student</button>
    </form>
  </div>
</body>
</html>
